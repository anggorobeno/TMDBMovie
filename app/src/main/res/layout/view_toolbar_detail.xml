<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tbDetail"
    android:layout_width="match_parent"
    app:layout_collapseMode="pin"
    android:layout_height="?attr/actionBarSize"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:theme="@style/AppTheme"
    tools:targetApi="lollipop">
  <ImageView
      android:id="@+id/ivToolbarGeneralBack"
      android:layout_width="27dp"
      android:layout_height="27dp"
      android:layout_alignParentStart="true"
      android:layout_gravity="center_vertical"
      android:layout_margin="@dimen/normal_margin"
      android:background="@drawable/bg_circle_shape"
      android:paddingTop="@dimen/xx_small_margin"
      android:paddingEnd="6dp"
      android:paddingStart="4dp"
      android:paddingBottom="@dimen/xx_small_margin"
      android:src="@drawable/ic_back"
      android:visibility="visible"
      />
  <TextView
      android:id="@+id/tv_tb_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="The Avengers"
      style="@style/MovieTitleToolbar"
      />
</androidx.appcompat.widget.Toolbar>
