<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlItemDataSetEmpty"
    android:layout_width="@dimen/all_medium_v2_image_size"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginStart="@dimen/x_small_margin"
    android:layout_marginBottom="@dimen/xx_small_margin">

    <RelativeLayout
        android:id="@+id/rlEmptyList"
        android:layout_width="@dimen/all_medium_v2_image_size"
        android:layout_height="@dimen/all_medium_v2_image_size">

        <ImageView
            android:id="@+id/iv_empty_list"
            android:layout_width="@dimen/all_medium_v2_image_size"
            android:layout_height="@dimen/all_medium_v2_image_size"
            android:scaleType="fitXY"
            android:src="@drawable/ic_empty_list"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvErrorDescription"
        style="@style/Paragraph4White"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Empty List"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlEmptyList"
        android:layout_alignStart="@id/rlEmptyList"
        android:layout_alignEnd="@id/rlEmptyList"
        android:layout_marginBottom="@dimen/x_small_margin"
        android:maxLines="2"
        android:textStyle="bold"
        tools:text="List Empty" />
</RelativeLayout>