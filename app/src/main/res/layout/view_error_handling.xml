<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llErrorHandling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivErrorHandlingIcon"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:src="@color/primary_gray" />

    <TextView
        android:id="@+id/tvErrorHandlingStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:text="@string/all_offline_status"
        android:textAlignment="center"
        android:textAppearance="@style/Paragraph3WhiteBold" />

    <TextView
        android:id="@+id/tvErrorHandlingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:text="@string/all_network_error"
        android:textAlignment="center"
        android:textAppearance="@style/Paragraph3White" />

    <Button
        android:id="@+id/btnErrorHandlingRetry"
        style="@style/PrimaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:text="@string/all_retry" />

</LinearLayout>