<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:showIn="@layout/activity_main"
    >
  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/CustomAppbarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <include
        layout="@layout/view_toolbar_main"
        android:id="@+id/view_toolbar"
        />

  </com.google.android.material.appbar.AppBarLayout>
  <include
      layout="@layout/content_movie"
      android:id="@+id/content_movie"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/appBarLayout"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />

  <include
      layout="@layout/view_progress_bar"
      android:id="@+id/view_progress_bar"
      android:visibility="gone"
      />

  <include
      layout="@layout/view_error_handling"
      android:id="@+id/view_error_handling"
      android:visibility="gone"
      />
</androidx.constraintlayout.widget.ConstraintLayout>